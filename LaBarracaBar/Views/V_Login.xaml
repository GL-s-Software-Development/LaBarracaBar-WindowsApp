<Window x:Class="LaBarracaBar.Views.V_Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:LaBarracaBar.ViewModels"
        xmlns:Controls="clr-namespace:LaBarracaBar.Views.Controls"
        mc:Ignorable="d"
        Title="Iniciar sesión" Height="530" Width="600"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        >

    <Window.DataContext>
        <viewModels:LoginViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
    </Window.Resources>

    <Window.Visibility>
        <Binding Path="IsViewVisible" Mode="TwoWay" Converter="{StaticResource BooleanToVisibility}"/>
    </Window.Visibility>

    <Border CornerRadius="20" MouseDown="Window_MouseDown">
        <Border.Background>
            <ImageBrush ImageSource="/Resources/Images/image-back.jpg"/>
        </Border.Background>
        <Border CornerRadius="20" 
            BorderThickness="4"
            Opacity="0.90">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource winBorderColor6}" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="{StaticResource primaryBackColor1}" Offset="0"/>
                    <GradientStop Color="{StaticResource primaryBackColor2}" Offset="0.75"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="INICIAR SESION"
                           Foreground="{StaticResource TextBoxColor1}"
                           FontSize="10"
                           FontFamily="Montserrat"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
                    <Button x:Name="btnMinimize"
                        BorderThickness="0"
                        Content="-"
                        Foreground="{StaticResource ButtonTextColor1}"
                        FontSize="16"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="1"
                        Click="btnMinimize_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource ButtonBackColor6}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource ButtonBackColor5}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button x:Name="btnClosed"
                        BorderThickness="0"
                        Content="x"
                        Foreground="{StaticResource ButtonTextColor1}"
                        FontSize="16"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="2"
                        Click="btnClosed_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource ButtonBackColor6}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource ButtonBackColor5}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
                <StackPanel Width="250"
                        Grid.Row="1"
                        Orientation="Vertical"
                        Margin="0,0,0,20">
                    <Image Source="/Resources/Images/logo-bar.png" Width="240" Height="130"/>
                    
                    <TextBlock Text="Usuario" 
                           Foreground="DarkGray" 
                           FontSize="15" 
                           FontWeight="Medium" 
                           FontFamily="Montserrat" 
                           Margin="0,35,0,0"/>
                    <TextBox x:Name="txtUser"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="13" 
                         FontWeight="Medium" 
                         FontFamily="Montserrat"
                         Foreground="White" 
                         CaretBrush="LightGray" 
                         BorderBrush="DarkGray" 
                         BorderThickness="0,0,0,1" 
                         Height="28" 
                         VerticalContentAlignment="Center" 
                         Margin="0,5,0,0"
                         Padding="20,0,0,0">
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Resources/Images/user-login.png" Stretch="None" AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>

                    <TextBlock Text="Contraseña" 
                           Foreground="DarkGray" 
                           FontSize="15" 
                           FontWeight="Medium" 
                           FontFamily="Montserrat" 
                           Margin="0,5,0,0"/>
                    <Controls:BindablePasswordBox Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Height="28"
                                                    Margin="0,5,0,0">
                        <Controls:BindablePasswordBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding LoginCommand}" CommandParameter="{Binding ElementName=btnLogin}" />
                        </Controls:BindablePasswordBox.InputBindings>
                    </Controls:BindablePasswordBox>
                    <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="Crimson" 
                           FontSize="15" 
                           FontWeight="Medium" 
                           FontFamily="Montserrat" 
                           Margin="0,30,0,0"
                           TextWrapping="Wrap"/>
                    <Button x:Name="btnLogin"
                        Command="{Binding LoginCommand}"
                        BorderThickness="0"
                        Content="Conectarse"
                        Foreground="White"
                        FontSize="16"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="2"
                        Margin="0,30,0,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource ButtonBackColor6}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource ButtonBackColor5}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="180" Height="35"
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <TextBlock Text="¿Contraseña olvidada?"
                           Foreground="White"
                           FontSize="12"
                           FontWeight="Medium"
                           FontFamily="Montserrat"
                           Cursor="Hand"
                           Margin="0,15,0,0"
                           TextAlignment="Center">
                        <TextBlock.InputBindings>
                            <MouseBinding Gesture="LeftClick"
                                          Command="{Binding RecoverPasswordCommand}" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                    <TextBlock Text="Registrarse"
                           Foreground="White"
                           FontSize="12"
                           FontWeight="Medium"
                           FontFamily="Montserrat"
                           Cursor="Hand"
                           Margin="0,3,0,0"
                           TextAlignment="Center">
                        <TextBlock.InputBindings>
                            <MouseBinding Gesture="LeftClick"
                                          Command="{Binding RegisterCommand}" />
                        </TextBlock.InputBindings>
                    </TextBlock>

                </StackPanel>
                <TextBlock HorizontalAlignment="Left" Foreground="White" Margin="12,479,0,0" Grid.Row="1" FontSize="9" TextWrapping="Wrap" Text="© Copyright 2023 GL'S Software Development" FontWeight="Medium" FontFamily="Montserrat" VerticalAlignment="Top"/>
            </Grid>
        </Border>
    </Border>
</Window>