<UserControl x:Class="LaBarracaBar.Views.V_SalesAnalysis"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:LaBarracaBar.Converters"
             xmlns:vm="clr-namespace:LaBarracaBar.ViewModels"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.DataContext>
        <vm:SalesAnalysisViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <conv:QuantityToWidthConverter x:Key="QuantityToWidthConverter" />
    </UserControl.Resources>

    <Grid Background="#1E1E1E" Margin="20">
        <StackPanel Orientation="Vertical" Margin="0" VerticalAlignment="Top" >

            <!-- Filtros de fecha -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 0 0 10" >
                <TextBlock Text="Desde:" Foreground="White" VerticalAlignment="Center" Margin="0 0 5 0"/>
                <DatePicker SelectedDate="{Binding StartDate}" Width="130"/>
                <TextBlock Text="Hasta:" Foreground="White" VerticalAlignment="Center" Margin="10 0 5 0"/>
                <DatePicker SelectedDate="{Binding EndDate}" Width="130"/>
                <Button Content="Filtrar" Command="{Binding FilterCommand}" Margin="10 0" Padding="10 5" Background="#FF8C00" Foreground="White"/>
            </StackPanel>

            <!-- Resumen -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding TotalSalesLabel}" FontSize="14" Foreground="White" Margin="0 0 20 0"/>
                <TextBlock Text="{Binding TotalAmountLabel}" FontSize="14" Foreground="White" Margin="0 0 20 0"/>
                <TextBlock Text="{Binding AverageLabel}" FontSize="14" Foreground="White"/>
            </StackPanel>

            <!-- Productos más vendidos -->
            <TextBlock Text="Productos más vendidos" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0 0 0 10"/>

            <DataGrid ItemsSource="{Binding TopProducts}"
              AutoGenerateColumns="False"
              Background="#2E2E2E"
              Foreground="White"
              RowBackground="#252526" AlternatingRowBackground="#1E1E1E"
              GridLinesVisibility="Horizontal"
              HeadersVisibility="Column"
              BorderThickness="0"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              Margin="0 0 0 10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Producto" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Cantidad" Binding="{Binding Quantity}" Width="100"/>
                    <DataGridTextColumn Header="Facturación" Binding="{Binding Revenue, StringFormat=C2}" Width="120"/>
                </DataGrid.Columns>
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#333"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="BorderBrush" Value="#444"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Padding" Value="8,4"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
            </DataGrid>

            <!-- Gráfico de ventas -->
            <TextBlock Text="Gráfico de cantidad vendida por producto" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0 10 0 5"/>

            <ScrollViewer Height="173" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding TopProducts}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock Text="{Binding Name}" Width="120" Foreground="White" />
                                <Rectangle Height="20" Fill="Orange" Width="{Binding Quantity, Converter={StaticResource QuantityToWidthConverter}}" />
                                <TextBlock Text="{Binding Quantity}" Margin="5,0,0,0" Foreground="White"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

        </StackPanel>
    </Grid>
</UserControl>