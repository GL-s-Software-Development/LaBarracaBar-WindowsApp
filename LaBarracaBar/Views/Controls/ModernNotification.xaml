<UserControl x:Class="LaBarracaBar.Views.Controls.ModernNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             Background="Transparent">
    <Border x:Name="MainBorder"
            CornerRadius="0"
            Padding="12"
            Background="#2E2E2E"
            Effect="{DynamicResource DropShadow}">
        <StackPanel Orientation="Horizontal">
            <fa:IconImage x:Name="NotifIcon" Width="28" Height="28" Foreground="White" Margin="0,0,12,0"/>
            <StackPanel>
                <TextBlock x:Name="TitleText" Foreground="White" FontWeight="Bold" FontSize="15"/>
                <TextBlock x:Name="MessageText" Foreground="White" FontSize="13" TextWrapping="Wrap" MaxWidth="280"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>