<UserControl x:Class="LaBarracaBar.Views.Controls.Table"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:LaBarracaBar.Views.Controls"
             Height="Auto" Width="300">

    <Border BorderBrush="#ff4f00" BorderThickness="2" CornerRadius="10" Padding="10" Margin="5" Background="#2E2E2E">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Toast -->
                <RowDefinition Height="*"/>
                <!-- Contenido -->
                <RowDefinition Height="Auto"/>
                <!-- Botones -->
            </Grid.RowDefinitions>

            <!-- ✅ Contenido principal -->
            <StackPanel Grid.Row="1">
                <TextBlock Text="{Binding TableNumber}" FontWeight="Bold" FontSize="18" Foreground="White" Margin="0 0 0 10"/>

                <!-- Lista de productos -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="200">
                    <ItemsControl ItemsSource="{Binding Products}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0 2">
                                    <TextBlock Text="{Binding Name}" Foreground="White" Width="150"/>
                                    <TextBlock Text="x" Foreground="White"/>
                                    <TextBlock Text="{Binding Quantity}" Foreground="White"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>

            <!-- ✅ Botones de acción -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0" Width="266" Grid.Row="2">
                <!-- Botón Borrar mesa -->
                <Button Content="Borrar mesa" Command="{Binding DeleteCommand}"
                        Background="Red"
                        Foreground="White"
                        Margin="6,0"
                        Padding="10 5"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Width="75"
                        Height="35"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="70" Height="35"
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Botón Editar mesa -->
                <Button Content="Editar mesa" Command="{Binding EditCommand}"
                        Background="Gray"
                        Foreground="White"
                        Margin="5,0"
                        Padding="10 5"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Width="75"
                        Height="35"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="75" Height="35"
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Botón Cobrar mesa -->
                <Button Content="Cobrar mesa" Command="{Binding ChargeCommand}"
                        Background="Green"
                        Foreground="White"
                        Margin="10,0"
                        Padding="10 5"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Width="75"
                        Height="35"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="75" Height="35"
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>