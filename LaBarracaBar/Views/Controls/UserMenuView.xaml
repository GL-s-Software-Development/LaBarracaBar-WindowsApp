<UserControl x:Class="LaBarracaBar.Views.Controls.UserMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:LaBarracaBar.Views.Controls"
             Height="Auto" Width="160">

    <Border Background="#333"
            CornerRadius="8"
            Padding="10"
            Effect="{DynamicResource shadowEffect}">

        <StackPanel>
            <Button Command="{Binding EditProfileCommand}"
                    HorizontalContentAlignment="Left"
                    Padding="5"
                    Margin="0,5"
                    Style="{StaticResource menuItemButton}">
                <StackPanel Orientation="Horizontal">
                    <fa:IconImage Icon="UserPen" Width="16" Height="16" Foreground="White"/>
                    <TextBlock Text="Editar perfil" Foreground="White" Margin="10,0,0,0"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding LogoutCommand}"
                    HorizontalContentAlignment="Left"
                    Padding="5"
                    Margin="0,5"
                    Style="{StaticResource menuItemButton}">
                <StackPanel Orientation="Horizontal">
                    <fa:IconImage Icon="RightFromBracket" Width="16" Height="16" Foreground="White"/>
                    <TextBlock Text="Cerrar sesión" Foreground="White" Margin="10,0,0,0"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Border>
</UserControl>