<UserControl x:Class="LaBarracaBar.Views.Controls.ConfirmNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             Background="Transparent">
    <Border Background="#2E2E2E"
            CornerRadius="0"
            Padding="12"
            Effect="{DynamicResource DropShadow}">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <fa:IconImage Icon="QuestionCircle"
                              Width="28"
                              Height="28"
                              Foreground="White"
                              Margin="0,0,12,0"/>
                <TextBlock x:Name="MessageText"
                           Foreground="White"
                           FontSize="14"
                           TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,12,0,0">
                <Button x:Name="BtnYes"
                        Content="Sí"
                        Width="70"
                        Background="#28a745"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Margin="0,0,8,0"
                        Click="BtnYes_Click"
                        Style="{StaticResource ButtonNotificationGreen}"/>
                <Button x:Name="BtnNo"
                        Content="No"
                        Width="70"
                        Background="#dc3545"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Style="{StaticResource ButtonNotificationRed}"
                        Click="BtnNo_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>